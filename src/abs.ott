defn 
  G |- e : T :: :: e :: ''
    {{ com well-typed expression }} by
  
  ------------- :: bool
  G |- b : Bool

  ------------ :: int
  G |- z : Int

  G ( x ) = T
  ----------- :: var
  G |- x : T

  G |- e : Int
  ------------ :: neg
  G |- - e : Int

  G |- e : Bool
  ------------ :: not
  G |- ! e : Bool

  G |- e1 : Int
  G |- e2 : Int
  ------------ :: add
  G |- e1 + e2 : Int

  G |- e1 : Int
  G |- e2 : Int
  ------------ :: mul
  G |- e1 * e2 : Int

  G |- e1 : Int
  G |- e2 : Int
  ------------ :: eq
  G |- e1 == e2 : Bool

  G |- e1 : Int
  G |- e2 : Int
  ------------ :: lt
  G |- e1 < e2 : Bool

  G |- e1 : T1 ... G |- en : Tn
  G ( fc ) = T1 , ... , Tn -> T
  ----------------------------- :: func_expr
  G |- fc ( e1 , ... , en ) : T

