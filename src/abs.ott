  evaluation_reduction :: red_ ::=

defn
  F1 ... Fn , s |- e ~> s' |- e' :: :: e :: ''
  {{ com expression evaluation }} by

  s ( x ) = t
  ---------------------------- :: var
  F1 ... Fn , s |- x ~> s |- t

  ---------------------------------------------------- :: neg
  F1 ... Fn , s |- - z ~> s |- (-) z

  ---------------------------------------------------- :: not
  F1 ... Fn , s |- ! b ~> s |- (!) b

  ---------------------------------------------------- :: add
  F1 ... Fn , s |- z1 + z2 ~> s |- z1 (+) z2

  ---------------------------------------------------- :: mul
  F1 ... Fn , s |- z1 * z2 ~> s |- z1 (*) z2

  ---------------------------------------------------- :: eq
  F1 ... Fn , s |- z1 == z2 ~> s |- z1 (==) z2

  ---------------------------------------------------- :: lt
  F1 ... Fn , s |- z1 < z2 ~> s |- z1 (<) z2

  F1 ... Fn , s |- e ~> s' |- e'
  ------------------------------------------ :: neg'
  F1 ... Fn , s |- - e ~> s' |- - e'

  F1 ... Fn , s |- e ~> s' |- e'
  ------------------------------------------ :: not'
  F1 ... Fn , s |- ! e ~> s' |- ! e'

  F1 ... Fn , s |- e1 ~> s' |- e'
  ------------------------------------------ :: add_l
  F1 ... Fn , s |- e1 + e2 ~> s' |- e' + e2

  F1 ... Fn , s |- e2 ~> s' |- e'
  ------------------------------------------ :: add_r
  F1 ... Fn , s |- e1 + e2 ~> s' |- e1 + e'

  F1 ... Fn , s |- e1 ~> s' |- e'
  ------------------------------------------ :: mul_l
  F1 ... Fn , s |- e1 * e2 ~> s' |- e' + e2

  F1 ... Fn , s |- e2 ~> s' |- e'
  ------------------------------------------ :: mul_r
  F1 ... Fn , s |- e1 * e2 ~> s' |- e1 + e'

  F1 ... Fn , s |- e1 ~> s' |- e'
  ------------------------------------------ :: eq_l
  F1 ... Fn , s |- e1 == e2 ~> s' |- e' == e2

  F1 ... Fn , s |- e2 ~> s' |- e'
  ------------------------------------------ :: eq_r
  F1 ... Fn , s |- e1 == e2 ~> s' |- e1 == e'

  F1 ... Fn , s |- e1 ~> s' |- e'
  ------------------------------------------ :: lt_l
  F1 ... Fn , s |- e1 < e2 ~> s' |- e' < e2

  F1 ... Fn , s |- e2 ~> s' |- e'
  ------------------------------------------ :: lt_r
  F1 ... Fn , s |- e1 < e2 ~> s' |- e1 < e'

  F1 ... Fn , s |- e ~> s' |- e'
  ------------------------------------------------------------------------------------------------------------- :: fun_exp
  F1 ... Fn , s |- fc ( e1 , ... , ei , e , e'1 , ... , e'j ) ~> s' |- fc ( e1 , ... , ei , e' , e'1 , ... , e'j )

  well_formed (y1 , ... , yn , e, s)
  disjoint ((y1 , ... , yn) , (x1 , ... , xn))
  ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------- :: fun_ground
  F1 ... Fi def T fc ( T1 x1 , ... , Tn xn ) = e ; F'1 ... F'j , s |- fc ( t1 , ... , tn ) ~> s [ y1 |-> t1 , ... , yn |-> tn ] |- e [ x1 |-> y1 , ... , xn |-> yn ]
